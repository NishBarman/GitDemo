import io.restassured.RestAssured;
import io.restassured.parsing.Parser;
import io.restassured.path.json.JsonPath;

import static io.restassured.RestAssured.*;

import POJO.GetCourse;



public class oAuthTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
	
		String accesstokenresponse=given().urlEncodingEnabled(false).queryParams("code","4%2F4QH-jgwDLURxFGeXBWx7qCKPD4gh3Ag9e-Is6Zx5kBOosbpPNHkvvZz7KkhWqmZKDgYkAvYwrFM0k6gYThW2ajw")
		.queryParams("client_id","692183103107-p0m7ent2hk7suguv4vq22hjcfhcr43pj.apps.googleusercontent.com")
		.queryParams("client_secret","erZOWM9g3UtwNRj340YYaK_W")
		.queryParams("redirect_uri","https://rahulshettyacademy.com/getCourse.php")
		.queryParams("grant_type","authorization_code").when().log().all()
		.post("https://www.googleapis.com/oauth2/v4/token").asString();
		
		JsonPath js=new JsonPath(accesstokenresponse);
		String acesstoken=js.getString("access_token");
		
		
		
		GetCourse gc=given().queryParam("access_token", acesstoken).expect().defaultParser(Parser.JSON)
				.when().get("https://rahulshettyacademy.com/getCourse.php").as(GetCourse.class);
		
		System.out.println(gc.getLinkedIn());
		System.out.println(gc.getInstructor());
		System.out.println(gc.getCourses());
		
		
	}

}
